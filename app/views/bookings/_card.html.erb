<%= link_to booking_path(booking), class: "zep-card-link" do %>
<div class="zeppelin-card">
  <div class="zeppelin-img" style="background-image: url(<%= cl_image_path booking.zeppelin.photo.key if booking.zeppelin.photo.attached?%>);">
  </div>
  <div class="zeppelin-info">
    <div class="zeppelin-name"><%= booking.zeppelin.name %></div>
    <div class="zeppelin-footer">
        <div class="description"> <%= booking.booking_date %> </div>
        <div class="zeppelin-price"><i class="material-icons"> euro_symbol </i><%= booking.total_price %></div>
    </div>
</div>
</div>
<% end %>
